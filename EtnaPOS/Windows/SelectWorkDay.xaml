<dx:ThemedWindow
    x:Class="EtnaPOS.Windows.SelectWorkDay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Radni dan" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
    >

    <Grid>

        <StackPanel Margin="0,20,0,0" Orientation="Vertical" HorizontalAlignment="Center" >
            <Label Content="Izaberi radni dan"></Label>
            <DatePicker x:Name="datePicker" Margin="0 15 0 0"></DatePicker>
            <Button x:Name="submitButton"  Margin="0 50 0 0"  Content="Nastavi" Click="submitButton_Click"></Button>
        </StackPanel>

    </Grid>
</dx:ThemedWindow>
